<%- include('header') %>
<div class="min-h-screen flex items-center justify-center relative overflow-hidden bg-gray-50 dark:bg-dark-900">
    
    <div class="absolute top-20 right-20 w-72 h-72 bg-blue-300 rounded-full mix-blend-multiply filter blur-xl opacity-70 animate-blob dark:opacity-20"></div>
    <div class="absolute bottom-20 left-20 w-72 h-72 bg-green-300 rounded-full mix-blend-multiply filter blur-xl opacity-70 animate-blob animation-delay-2000 dark:opacity-20"></div>

    <div class="relative z-10 bg-white/30 dark:bg-dark-800/50 backdrop-blur-xl p-8 rounded-3xl shadow-2xl w-full max-w-md border border-white/20 dark:border-gray-700 animate-float">
        
        <div class="flex justify-center -mt-16 mb-2">
            <lottie-player src="https://assets7.lottiefiles.com/packages/lf20_w51pcehl.json"  background="transparent"  speed="1"  style="width: 180px; height: 180px;"  loop  autoplay></lottie-player>
        </div>

        <h2 class="text-3xl font-bold text-gray-800 dark:text-white mb-2 text-center">Start Journey</h2>
        <p class="text-center text-gray-500 dark:text-gray-400 mb-6">Create your new habits today âœ¨</p>
        
        <form action="/auth/register" method="POST" class="space-y-5">
            <div>
                <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-1">Username</label>
                <input type="text" name="username" class="w-full px-5 py-3 rounded-xl bg-white/50 dark:bg-dark-900/50 border border-gray-200 dark:border-gray-600 focus:outline-none focus:ring-2 focus:ring-brand-500 transition shadow-sm" required>
            </div>
            <div>
                <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-1">Password</label>
                <input type="password" name="password" class="w-full px-5 py-3 rounded-xl bg-white/50 dark:bg-dark-900/50 border border-gray-200 dark:border-gray-600 focus:outline-none focus:ring-2 focus:ring-brand-500 transition shadow-sm" required>
            </div>
            <button class="w-full py-4 bg-orange-500 hover:bg-orange-400 text-white font-bold rounded-xl shadow-lg shadow-orange-500/30 transition transform hover:-translate-y-1">
                Sign Up
            </button>
        </form>
        <p class="mt-6 text-center text-gray-600 dark:text-gray-400">
            Already have one? <a href="/auth/login" class="text-brand-600 font-bold hover:underline">Login</a>
        </p>
    </div>
</div>
<%- include('footer') %>